DATABASE_URL=postgresql://uname:pwd@db:5432/saasready
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256

POSTGRES_USER=uname
POSTGRES_PASSWORD=accnt_pwd
POSTGRES_DB=saasready

# Email Configuration
EMAIL_FROM=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false

# Frontend URL for email links
FRONTEND_BASE_URL=http://localhost:3000



# API Key validation (for paid features)
ENABLE_API_KEY_VALIDATION=false  # Set to true in production

# Rate limiting (premium feature)
ENABLE_RATE_LIMITING=false  # Enable for paid plans
FREE_TIER_RATE_LIMIT=1000  # requests per hour
PRO_TIER_RATE_LIMIT=10000  # requests per hour

# Feature flags for premium features
ENABLE_SSO=false  # Enable for paid plans
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_STRIPE_INTEGRATION=false

# Redis Configuration
REDIS_URL=redis://:saasready_redis@redis:6379/0
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REGISTER=3

# Token Expiry (reduced from 7 days to 1 hour)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Brute Force Protection
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30